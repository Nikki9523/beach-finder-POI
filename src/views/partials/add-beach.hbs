<form class="box" action="/location/{{location._id}}/addbeach" method="POST">
  <label>Enter Beach Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Beach Name" name="name">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter water quality rating" name="waterQuality">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter beach Length (km)" name="beachLength">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Beach</button>
</form>
